<!--------------------------------------------------------------------	class used to read and write XML files	uses extended classes ReadFileHandler and WriteFileHandler--------------------------------------------------------------------><cfcomponent name="XMLFileHandler">		<cfset variables.ReadFileHandlerObj = "">	<cfset variables.WriteFileHandlerObj = "">	<cfset variables.fileError = "">			<cffunction name="init" access="public" output="true"  returntype="Void">     		<cfargument name="fileName" type="string" required="true">		<cfargument name="fileDirectory" type="string" required="true">							<cfobject name="variables.ReadFileHandlerObj" component="ReadFileHandler">		<cfobject name="variables.WriteFileHandlerObj" component="WriteFileHandler">		<cfset variables.ReadFileHandlerObj.init(arguments.fileName,arguments.fileDirectory)>		<cfset variables.WriteFileHandlerObj.init(arguments.fileName,arguments.fileDirectory)>			   </cffunction>		<cffunction name="setFileName" output="false" returntype="void">		<cfargument name="fileName" type="string" required="true">		<cfset variables.ReadFileHandlerObj.setFileName(arguments.fileName)>		<cfset variables.WriteFileHandlerObj.setFileName(arguments.fileName)>				</cffunction>		<cffunction name="setFileDirectory" output="false" returntype="void">		<cfargument name="fileDirectory" type="string" required="true">		<cfset variables.ReadFileHandlerObj.setFileDirectory(arguments.fileDirectory)>		<cfset variables.WriteFileHandlerObj.setFileDirectory(arguments.fileDirectory)>				</cffunction>		<cffunction name="save" output="true" returntype="boolean">		<cfargument name="XMLFileContents" type="string" required="true">				<cfif IsXML(arguments.XMLFileContents)>						<cfset variables.WriteFileHandlerObj.setFileContents(toString(arguments.XMLFileContents),false)>			<cfif variables.WriteFileHandlerObj.write()>				<cfreturn true>			<cfelse>				<cfset variables.fileError = variables.WriteFileHandlerObj.get('fileError')>			</cfif>					</cfif>		<cfreturn false>	</cffunction>		<cffunction name="read" output="false" returntype="any">		<cfif variables.ReadFileHandlerObj.read()>			<cfif IsXML(variables.ReadFileHandlerObj.get('fileContents'))>				<cfreturn XmlParse(variables.ReadFileHandlerObj.get('fileContents'))>			</cfif>		<cfelse>			<cfset variables.fileError = variables.ReadFileHandlerObj.get('fileError')>		</cfif>		<cfreturn false>	</cffunction>		<cffunction name="getError" output="false" returntype="any">		<cfreturn variables.fileError>	</cffunction>		</cfcomponent>